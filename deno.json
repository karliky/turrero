{
    "compilerOptions": {
        "allowJs": true,
        "lib": [
            "dom",
            "dom.iterable",
            "deno.ns",
            "deno.window"
        ],
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "exactOptionalPropertyTypes": true,
        "useUnknownInCatchVariables": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "preserveConstEnums": true,
        "skipLibCheck": false
    },
    "imports": {
        "@/": "./",
        "@/infrastructure/": "./infrastructure/",
        "@/scripts/": "./scripts/",
        "@std/": "https://deno.land/std@0.224.0/",
        "puppeteer": "npm:puppeteer@^24.16.1",
        "csv": "https://deno.land/x/csv@v0.8.0/mod.ts",
        "dotenv": "https://deno.land/std@0.224.0/dotenv/mod.ts",
        "jimp": "npm:jimp@^0.22.12",
        "cheerio": "npm:cheerio@^1.0.0",
        "algoliasearch": "npm:algoliasearch@^5.15.0",
        "date-fns": "npm:date-fns@^4.1.0",
        "node-fetch": "npm:node-fetch@^3.3.2",
        "@puppeteer/browsers": "npm:@puppeteer/browsers@^2.4.4",
        "puppeteer-core": "npm:puppeteer-core@^24.16.1"
    },
    "lint": {
        "rules": {
            "tags": ["recommended"],
            "include": ["ban-untagged-todo"],
            "exclude": ["no-unused-vars"]
        },
        "exclude": [
            ".next/",
            "node_modules/",
            "out/",
            "build/",
            "dist/"
        ]
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 100,
        "indentWidth": 2,
        "semiColons": true,
        "singleQuote": true,
        "proseWrap": "preserve",
        "exclude": [
            ".next/",
            "node_modules/",
            "out/",
            "build/",
            "dist/"
        ]
    },
    "tasks": {
        "dev": "deno run --allow-all --watch scripts/recorder.ts",
        "scrape": "deno run --allow-all scripts/recorder.ts",
        "validate": "deno run --allow-all scripts/validate-types.ts",
        "enrich": "deno run --allow-all scripts/tweets_enrichment.ts",
        "books": "deno run --allow-all scripts/generate-books.ts",
        "book-enrich": "deno run --allow-all scripts/book-enrichment.ts",
        "algolia": "deno run --allow-all scripts/make-algolia-db.ts",
        "images": "deno run --allow-all scripts/image-card-generator.ts",
        "check": "deno check scripts/tweets_enrichment.ts scripts/make-algolia-db.ts scripts/generate-books.ts scripts/validate-deno.ts scripts/test-deno-scripts.ts",
        "lint": "deno lint scripts/tweets_enrichment.ts scripts/make-algolia-db.ts scripts/generate-books.ts scripts/validate-deno.ts scripts/test-deno-scripts.ts",
        "fmt": "deno fmt scripts/",
        "test": "deno test --allow-all scripts/",
        "clean": "rm -rf .deno_cache"
    },
    "nodeModulesDir": "auto",
    "lock": false
}