{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "$id": "tweets_exam.schema.json",
  "title": "Tweets Exam Database",
  "description": "AI-generated quiz questions for tweet threads",
  "type": "array",
  "items": {
    "type": "object", 
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^[0-9]+$",
        "description": "Thread ID (first tweet ID)"
      },
      "questions": {
        "type": "array",
        "minItems": 1,
        "maxItems": 10,
        "items": {
          "type": "object",
          "properties": {
            "question": {
              "type": "string",
              "description": "Quiz question in Spanish"
            },
            "options": {
              "type": "array",
              "minItems": 3,
              "maxItems": 4,
              "items": {
                "type": "string"
              },
              "description": "Multiple choice options"
            },
            "answer": {
              "type": "number",
              "minimum": 1,
              "maximum": 4,
              "description": "Correct answer index (1-based)"
            }
          },
          "required": ["question", "options", "answer"]
        }
      }
    },
    "required": ["id", "questions"]
  }
}